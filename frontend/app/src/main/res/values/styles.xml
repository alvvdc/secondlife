<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="android:textColorSecondary">@color/color5</item>
    </style>

    <style name="AppTheme.ButtonCustom" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.ButtonCustomWarn" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape3</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.EditTextCustom" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_shape2</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColorHint">@color/color4</item>
    </style>

    <style name="AppTheme.SpinnerCustom" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/rounded_shape2</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
